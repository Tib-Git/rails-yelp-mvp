<div class="container mt-5">
  <div class="mb-4">

    <h1><%= @restaurant.name %></h1>
    <p>Address: <%= @restaurant.address %></p>
    <p>Phone number: <%= @restaurant.phone_number %></p>
    <p>Category: <%= @restaurant.category %></p>

    <%= link_to edit_restaurant_path(@restaurant.id), class: 'btn btn-light btn-sm border' do %>
      <i class="fa fa-pencil"></i> Edit this restaurant
    <% end %>

    <%= link_to restaurants_path, class: 'btn btn-light btn-sm border' do %>
      <i class="fa-solid fa-arrow-rotate-left"></i> Back to restaurant list
    <% end %>

    <ul>
      <% @reviews.each do |review| %>
        <li><%= review.content %> â€“ Rating: <%= review.rating %></li>
      <% end %>
    </ul>
  </div>
</div>

<div class="container mt-5">
    <h3>Let a review to "<%= @restaurant.name %>"</h3>
      <%= simple_form_for [@restaurant, Review.new] do |f| %>
        <%= f.input :content %>
        <%= f.input :rating %>
        <%= f.submit "Submit" %>
      <% end %>
</div>
